{
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "mocha": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "strict": 1,
    "indent": ["error", 2],
    "semi": 0,
    "no-unused-vars": 1,
    "comma-dangle": 0,
    "no-constant-condition": 0,
    "require-yield": 0
  },
  "plugins": [
    "flowtype"
  ]
}
